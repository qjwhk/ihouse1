<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4" >

    <com.lierda.kesi.ihouse.constants.CommonTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/phoneEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:hint="请输入您的管理员账号"
            android:textColor="#505166"
            android:textSize="20dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/adminNotice"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#fd3a3c"
        android:layout_below="@+id/phone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableStart="@drawable/common_icon_remind"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/deviceList"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/adminNotice"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="#4ea7f2"
        android:text=" 进入设备列表"
        android:textColor="#ffffff" />

</RelativeLayout>